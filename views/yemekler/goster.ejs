<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Bizim Restaurant</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= yemek.resim %>" alt="bizimRestaurant">
				<div class="caption-full">
					<h4 class="pull-right">$7.00</h4>
					<h4><%= yemek.adi %></h4>
					<p><%= yemek.aciklama %></p>
					<p>
						<em>Ekleyen Kullanici :</em><%= yemek.yazar.username %>
					</p>
					
					<% if(currentUser && yemek.yazar.id.equals(currentUser._id)){ %>
						<a class="btn btn-warning" href="/yemekler/<%= yemek._id %>/edit">Edit</a>

						<form class="action-buttons" action="/yemekler/<%=yemek._id%>?_method=DELETE" method="POST">
							<button class="btn btn-danger">Yemegi Sil</button>
						</form>
					<%} %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/yemekler/<%= yemek._id %>/yorumlar/yeni">Yeni Yorum Ekle</a>
				</div>
				<hr>
				<% yemek.yorumlar.forEach(function(yorum){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= yorum.yazar.username %></strong>
						<span class="pull-right">20 gün önce</span>
						<p>
							<%= yorum.text %>
						</p>
						<% if(currentUser && yorum.yazar.id.equals(currentUser._id)){ %>
						<a  class="btn btn-xs btn-warning"
							href="/yemekler/<%= yemek._id %>/yorumlar/<%= yorum._id %>/edit">Edit
						</a>
						<form class="action-buttons" action="/yemekler/<%= yemek._id %>/yorumlar/<%= yorum._id %>?_method=DELETE" method="POST">
							<input type="submit" class="btn btn-xs btn-danger" value="Delete">
						</form>
						<%} %>
						<hr>
					</div>
				</div>
				
				<%}) %>
			</div>
		</div>
	</div>
</div>


<% include ../partials/footer %>
	

